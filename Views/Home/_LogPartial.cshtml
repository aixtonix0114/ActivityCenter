@model LogUser

<div class="col-sm-6">
    <form action="/login" method="post">
        <h3>Login</h3>
        <hr>
        <div class="row">
            <div class="col-sm-6">
                <label>Email</label>
            </div>
            <div class="col-sm-6">
                <input asp-for="LEmail" class="form-control">
                <span asp-validation-for="LEmail" class="text-danger"></span>
            </div>
            <br>
            <br>
            <div class="col-sm-6">
                <label>Password</label>
            </div>
            <div class="col-sm-6">
                <input asp-for="LPassword" class="form-control">
                <span asp-validation-for="LPassword" class="text-danger"></span>
            </div>
            
        </div>
        <input type="submit" value="Log In" class="btn btn-primary">
    </form>
</div>
